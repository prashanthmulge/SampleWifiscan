   />
<TextView 
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:text="Rssi:"
   />
<TextView 
   android:id="@+id/Rssi"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   />
  
<TextView 
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:text="MAC:"
   />
<TextView 
   android:id="@+id/Mac"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   />
<TextView 
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:text="Strength:"
   />
<TextView 
   android:id="@+id/Sig"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
